- var page = helpers.getPageName(_path)
include ./mixins/_seo
include ./mixins/_nav
include ./mixins/_header
include ./mixins/_page-hero

doctype html
include ./includes/_ie-conditional-comments
+seo(title, description, image, page)
include ./includes/_head
  
  body(id= page)
  
    .master-wrapper
      div(
        class='master parallax'
        data-img-mobile='#{contentful.contact[0].masterImage.fields.file.url}'
        data-bg-src='#{contentful.contact[0].masterImageSm.fields.file.url}'
      )
        +nav(page)
        +header('yellow')
        +pageHero('contact')

    #content
      .container
        .row
          .col-md-push-8.col-md-4.col-sm-8.col-xs-10
            div(itemscope='', itemtype='http://schema.org/LocalBusiness')
              h2
                span(itemprop='name') Early Light Media
              div(itemprop='address', itemscope, itemtype='http://schema.org/PostalAddress')
                span(itemprop='streetAddress') 3500 Boston Street
                br
                | Suite 411
                br
                span(itemprop='addressLocality') Baltimore
                | , 
                span(itemprop='addressRegion') MD 
                span(itemprop='postalCode') 21224
              p
                span(itemprop='telephone')
                br
            h3 Let's Start Producing
            script(charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/shell.js")
            <script>hbspt.forms.create({portalId: "4887419", formId:"5a799a59-3ad0-4fce-bc9d-1cf7f6ba21df"});</script> 

            br.visible-sm.visible-xs
            br.visible-sm.visible-xs
          .col-md-8.col-md-pull-4.col-sm-12.col-xs-12
            iframe(
              src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3088.4633308840644!2d-76.56923938506564!3d39.277741732040404!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c803f40f700b8d%3A0x1fe6cafe68e25204!2s3500+Boston+St+%23411%2C+Baltimore%2C+MD+21224!5e0!3m2!1sen!2sus!4v1491747905578'
              width='100%'
              height='500px'
              frameborder='0'
              style='border:0'
            )
    .container
      include ./includes/_footer
  include ./includes/_social-icons.svg
  script(src='/js/intersectionObserver.js' type='text/javascript' defer='true')