.head-content-wrapper
  .head-content
    .container
      .row
        .col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
          a(
            class='category'
            href='/blog/{{ page.categories | first }}'
           )
           | { category }
          h1.page-title= entry.title
          p= entry.box_text
            .meta
              .row
                .col-md-10
                  span By
                  | { author }
                .col-md-2
                  time.meta-date
                  | #{entry.date}
.span.scrolltomain.hidden-xs.hidden-sm
