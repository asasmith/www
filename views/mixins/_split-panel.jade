mixin split-panel()
  - var postTitle = contentful.news_category[0].title
  - var postSubTitle = contentful.news_category[0].boxTitle
  - var category = contentful.news_category[0].category.fields.title
  - var permalink = contentful.news_category[0]._url.replace(/.html$/,"") 
  - var panelImage = contentful.news_category[0].imageBox
  .panel-common
    .panel-box-1-heading-img(style='background-image:url(#{asset(panelImage)})')
      a(href='/blog/#{category}')= category
    .panel-box-1-body
      a(href= permalink)
        span.title= postTitle
        span.text= postSubTitle
 