mixin pageHero(page)

  case page
    when 'about'
      - var hero = contentful.about[0].hero[0].fields.title
      - var sub  = contentful.about[0].hero[0].fields.subTitle
    when 'contact'
      - var hero = contentful.contact[0].hero[0].fields.title
      - var sub  = contentful.contact[0].hero[0].fields.subTitle


  .head-content-wrapper
    .head-content
      .container
        .row
          .col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
            h1.page-title= hero
            p= sub
  .span.scrolltomain.hidden-xs.hidden-sm